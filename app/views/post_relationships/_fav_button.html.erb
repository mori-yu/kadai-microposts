<% if current_user.faving?(fav_post) %>
    <%= form_for(current_user.post_relationships.find_by(fav_id: fav_post.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :fav_post_id, fav_post.id %>
      <%= f.submit 'Unfav', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.post_relationships.build) do |f| %>
      <%= hidden_field_tag :fav_post_id, fav_post.id %>
      <%= f.submit 'Fav', class: 'btn btn-primary btn-xs' %>
    <% end %>
 <% end %>